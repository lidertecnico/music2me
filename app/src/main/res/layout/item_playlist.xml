<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/secundary_color">

    <!-- Nombre de la Playlist -->
    <TextView
        android:id="@+id/tvPlaylistName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para agregar playlist -->
    <Button
        android:id="@+id/btnAddSong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_add_playlist_item"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/dark_gray"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDeletePlaylist"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Botón para eliminar playlist -->
    <Button
        android:id="@+id/btnDeletePlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_delete_playlist"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary_color"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvPlaylistName"
        app:layout_constraintStart_toEndOf="@id/btnAddSong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
